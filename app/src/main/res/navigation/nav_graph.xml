<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_movies">

    <fragment
        android:id="@+id/nav_movies"
        android:name="com.diyartaikenov.pickamovie.ui.MoviesFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movies">

    </fragment>

    <fragment
        android:id="@+id/nav_series"
        android:name="com.diyartaikenov.pickamovie.ui.SeriesFragment"
        android:label="@string/title_series"
        tools:layout="@layout/fragment_series">

        <action
            android:id="@+id/action_nav_series_to_nav_blank_fragment"
            app:destination="@id/nav_blank_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_blank_fragment"
        android:name="com.diyartaikenov.pickamovie.ui.BlankFragment"
        tools:layout="@layout/fragment_blank">

    </fragment>
</navigation>