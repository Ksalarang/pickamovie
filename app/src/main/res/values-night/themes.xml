<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- TODO: COPY CHANGES TO NIGHT/THEMES.XML! -->
    <style name="Theme.PickAMovie" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#16232E</item>
        <item name="colorPrimaryVariant">#1B2935</item>
        <item name="colorOnPrimary">#DCDCDC</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D62763</item>
        <item name="colorSecondaryVariant">#983959</item>
        <item name="colorOnSecondary">#000000</item>
        <!-- Background and surface colors -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="colorOnBackground">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- General views -->
        <item name="android:textViewStyle">@style/Widget.PickAMovie.TextView</item>
        <item name="tabStyle">@style/Widget.PickAMovie.TabLayout</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Widget.PickAMovie.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.PickAMovie.TextView.Minor" parent="Widget.PickAMovie.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/color_minor_text</item>
    </style>

    <!-- Labels in Movie filters -->
    <style name="Widget.PickAMovie.TextView.Label" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_170</item>
    </style>

    <style name="Widget.PickAMovie.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.PickAMovie.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <!-- MovieDetailsFragment -->
    <style name="ThemeOverlay.PickAMovie" parent="ThemeOverlay.MaterialComponents">
        <item name="elevation">0dp</item>
    </style>

    <style name="TextAppearance.PickAMovie.CollapsingToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
    </style>
</resources>