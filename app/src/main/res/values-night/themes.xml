<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PickAMovie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#16232E</item>
        <item name="colorPrimaryVariant">#2F4861</item>
        <item name="colorOnPrimary">#BFBFBF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D62763</item>
        <item name="colorSecondaryVariant">#983959</item>
        <item name="colorOnSecondary">#191818</item>
        <!-- Background and surface colors -->
        <item name="android:colorBackground">?attr/colorPrimary</item>
        <item name="colorOnBackground">?attr/colorOnPrimary</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Action bar -->
        <item name="toolbarStyle">@style/Widget.PickAMovie.Toolbar</item>
        <item name="actionBarStyle">@style/Widget.PickAMovie.Actionbar</item>
        <item name="actionOverflowButtonStyle">@style/Widget.PickAMovie.ActionButton.Overflow</item>

        <!-- General views -->
        <item name="android:textViewStyle">@style/Widget.PickAMovie.TextView</item>
        <item name="tabStyle">@style/Widget.PickAMovie.TabLayout</item>
    </style>

    <style name="Widget.PickAMovie.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.PickAMovie.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
    <style name="Widget.PickAMovie.Actionbar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="Widget.PickAMovie.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.PickAMovie.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
    </style>
</resources>